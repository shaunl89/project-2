<div class="pure-g">

  <div class="pure-u-1-3">
    <h2>Title:</h2>
    <p> {{journal.name}}</p>
  </div>

  <div class="pure-u-1-3">
    <h2>Location: </h2>
    <p>{{journal.location}}</p>
  </div>

  <div class="pure-u-1-3">
    <h2>Memories:</h2>
    <p>{{journal.text}}</p>
  </div>

</div>


<h2 class="pure-u-1">Update this Entry:</h2>

{{ flash }}

<form class="pure-form pure-form-aligned" action="/journals/{{journal.id}}?_method=PUT" method="post">
  <fieldset>
    <div class="pure-control-group">
      <label>Title:</label>
      <input type="text" name="update[name]" placeholder="Journal Name">
    </div>

    <div class="pure-control-group">
      <label>Location:</label>
      <input type="text" name="update[location]" placeholder="Location">
    </div>

    <div class="pure-control-group">
      <label>Text:</label>
      <textarea type="text" name="update[text]" placeholder="Your text">
      </textarea>
    </div>

      <div class="pure-controls">
        <button class="pure-button pure-button-primary">Update</button>
      </div>
  </fieldset>
</form>

<form class="pure-form pure-form-aligned" action="/journals/{{journal.id}}?_method=delete" method="post">
  <fieldset>
    <div class="pure-controls">
      <button class="pure-button pure-button-primary">Delete</button>
      <span class="pure-form-message-inline">Irreversible</span>
    </div>
  </fieldset>
</form>

<div id='map2'></div>

<script  src="https://maps.googleapis.com/maps/api/js?key={{GOOGLE_MAPS_KEY}}&language=en" type="text/javascript">
</script>
