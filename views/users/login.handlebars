<h2>User Login</h2>

{{ flash }}

<form action="/users/login" method="post">
<div class="form-group">
  <label>Email:
    <input type="text" name="user[email]" placeholder="e.g. john.doe@gmail.com">
  </label>
</div>

<div class="form-group">
  <label>Password:
    <input type="password" name="user[password]" placeholder="Enter your password">
  </label>
</div>

<button>Login</button>

</form>
